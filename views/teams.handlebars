<section class="teamPage">
    <div class="teamContainer1 container-fluid ">
        <div class="row">
            <div class="teamContainer col-lg-4 col-md-4 col-sm-4 ">
                <div class="teamImg">
                    <img class="teamImg" src="/img/mancity.svg" alt="teamlogo">
                </div>
            </div>
            <div class="teamDetails col-lg-8 col-md-8 col-sm-8 ">
                <div class="teamLists">
                    <h3 class="subheading font-weight-bold">{{teamName}}</h3>
                    <ul class="pdcol">
                        <li class="tourlist">
                            <div class="label">Team Manager</div>
                            <div class="info">{{username}}</div>
                        </li>
                    </ul>
                    <ul class="pdcol">
                        <li class="tourlist">
                            <div class="label">Location</div>
                            <div class="info">{{location}}</div>
                        </li>
                    </ul>
                    <ul class="pdcol">
                        <li class="tourlist">
                            <div class="label">Number of Teams</div>
                            <div class="info">{{number_of_teams}}</div>
                        </li>
                    </ul>
                    <ul class="pdcol">
                        <li class="tourlist">
                            <div class="label">Number of players on field</div>
                            <div class="info">{{number}}</div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>


