{{#if user.user.organizer }}
<div class="row1 text-white mb-3" id="register">
    <div class="col-lg-8 m-auto">
        <div class="text-center">
        </div>

        <form action="/api/organizers/tournament" method="POST" class="loginFrame">
            <div class="form-group">
                <label for="category">Category</label>
                <select name="category" class="form-control" required>
                    <option value="">Choose one</option>
                    <option value="1">League</option>
                    <option value="2">Knockout</option>
                    <option value="3">Leauge and knockout</option>
                </select>
            </div>

            <div class="form-group">
                <label for="nameOfTournament">Name of tournament</label>
                <input type="text" class="form-control" placeholder="Name of tournament" name="nameOfTournament" required aria-required="true">
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="numberOfTeam">Number of team</label>
                    <input type="text" class="form-control" placeholder="Number of team" name="numberOfTeam" required aria-required="true">
                </div>
                <div class="form-group col-md-6">
                    <label for="numberOfPlayer">Number of player</label>
                    <select name="numberOfPlayer" class="form-control" required aria-required="true">
                        <option value="">Choose one</option>
                        <option value="1">6</option>
                        <option value="2">7</option>
                        <option value="3">9</option>
                        <option value="4">11</option>
                    </select>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="location">Location</label>
                    <select name="location" class="form-control" required aria-required="true">
                        <option value="">Region</option>
                        <option value="Hong Kong">Hong Kong</option>
                        <option value="Kowloon">Kowloon</option>
                        <option value="New Territories">New Territories</option>
                    </select>
                </div>

                <div class="form-group col-md-6">
                    <label for="date">Date</label>
                    <input type="date" class="form-control" placeholder="Date" name="date" required aria-required="true">
                </div>
            </div>

            <div class="form-group">
                <label for="prize">Prize</label>
                <input type="text" class="form-control" placeholder="Prize" name="prize">
            </div>

            <br>
            <input type="submit" class="btn btn-danger btn-block" value="Submit">
        </form>
    </div>
</div>
{{/if}}
<div class="conBack"></div>