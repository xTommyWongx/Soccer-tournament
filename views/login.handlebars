<div class="text-center loginBody">
    <form class="form-signin loginFrame" action="/auth/login" method="POST">
        
        {{!-- social login start --}}

        <div class="btn-group py-3">
            <a class='btn bg-primary disabled text-white'>
                <i class="fa fa-facebook"></i>
            </a>
            <a class='btn facebook-btn text-white' href='/auth/facebook'><i class="fa">Sign in with Facebook</i></a>
        </div>
        <br />
        <br />
        
        {{!-- end of social login --}}
        <h1 class="h5 mb-2 font-weight-normal text-white fa">Log in with email</h1>

        <label for="inputEmail" class="sr-only">Email address</label>
        <input type="email" name="email" class="form-control fa" placeholder="Email address" required autofocus>
        <br><br>
        <label for="inputPassword" class="sr-only">Password</label>
        <input type="password" name="password" class="form-control fa" placeholder="Password" required>

        <div class="checkbox mb-3 text-white">
            <label>
                <input type="checkbox" value="remember-me"> Remember me
            </label>
        </div>
        <input class="btn btn-info btn-block" type="submit" value="Sign in">
        <br>
        <a href="/register" class="btn btn-danger btn-block">Sign up</a>
        <br><br>
    </form>
</div>
